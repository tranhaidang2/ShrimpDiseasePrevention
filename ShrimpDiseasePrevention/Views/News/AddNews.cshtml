@{
    var userId = ViewBag.UserId;
    var userFullName = ViewBag.UserFullName;
}

<h2>Add News</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="NewsTitle">Title</label>
        <input type="text" class="form-control" id="NewsTitle" name="NewsTitle" required />
    </div>

    <div class="form-group">
        <label for="NewsContent">Content</label>
        <textarea class="form-control" id="NewsContent" name="NewsContent" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label for="NewsShortDescription">Short Description</label>
        <textarea class="form-control" id="NewsShortDescription" name="NewsShortDescription" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label for="ImageFiles">Upload Images</label>
        <input type="file" class="form-control" id="ImageFiles" name="ImageFiles" accept="image/*" multiple />
    </div>

    <div class="form-group">
        <label for="NewsCreateAt">Create Date</label>
        <input type="datetime-local" class="form-control" id="NewsCreateAt" name="NewsCreateAt" />
    </div>

    <input type="hidden" name="UserId" value="@userFullName" />

    <button type="submit" class="btn btn-primary">Add News</button>
</form>
