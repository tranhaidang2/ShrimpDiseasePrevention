                        <div class="service-item">
                            <img src="~/img/carousel_4.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="service-item">
                            <img src="~/img/carousel_5.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="service-item">
                            <img src="~/img/carousel_6.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="service-item">
                            <img src="~/img/carousel_7.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
