                        <div class="service-item">
                            <img src="~/img/carousel_5.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="service-item">
                            <img src="~/img/carousel_6.jpg" alt="Image" class="img-fluid">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="service-item">
