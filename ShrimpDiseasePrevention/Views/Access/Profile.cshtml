@model ShrimpDiseasePrevention.Models.User

@{
    ViewData["Title"] = "Hồ Sơ Người Dùng";
}
<link rel="stylesheet" href="~/css/profile.css"/>

<div class="container profile-container">
    <h1 class="profile-title">Hồ Sơ Người Dùng</h1>
    <div class="profile-card">
        <div class="profile-info">
            <p><strong>Tên đăng nhập:</strong> @Model.UserName</p>
            <p><strong>Họ và tên:</strong> @Model.UserFullName</p>
            <p><strong>Ngày tạo tài khoản:</strong> @Model.UserCreateAt?.ToString("dd/MM/yyyy")</p>
            <p><strong>Vai trò:</strong> @Model.RoleId</p>
        </div>
        <div class="profile-actions">
            <form method="post" action="@Url.Action("Logout", "Access")">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Đăng xuất</button>
            </form>
        </div>
    </div>
</div>
