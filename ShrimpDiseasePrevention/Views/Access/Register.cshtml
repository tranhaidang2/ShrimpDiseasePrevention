@model ShrimpDiseasePrevention.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Access.css" asp-append-version="true" />
</head>
<body>
    <div class="floating-form-container">
        <h3>Đăng ký</h3>
        <form id="registrationForm" asp-action="Register" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="Tên đăng nhập" required />
                <label asp-for="UserName">Tên đăng nhập</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserPassword" class="form-control" type="password" id="UserPassword" placeholder="Mật khẩu" required />
                <label asp-for="UserPassword">Mật khẩu</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="UserFullName" class="form-control" id="UserFullName" placeholder="Họ và tên" required />
                <label asp-for="UserFullName">Họ và tên</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            Đã có tài khoản? <a asp-action="Login">Đăng nhập</a>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.NotificationForRegister == "Already")
    {
        <script>
            const userNameInput = document.getElementById("UserName");
            alert('Tên tài khoản đã tồn tại, vui lòng chọn tên khác!');
            userNameInput.focus();
        </script>
    }
    @if (ViewBag.NotificationForRegister == "Success")
    {
        <script>
            alert('Đăng ký thành công!');
        </script>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
                 document.getElementById("registrationForm").addEventListener("submit", function (event) {
            event.preventDefault();

            let isValid = true;
            let errorMessage = "";

            const userNameInput = document.getElementById("UserName");
            const userPasswordInput = document.getElementById("UserPassword");
            const userFullNameInput = document.getElementById("UserFullName");

            const userName = userNameInput.value;
            if (userName.length == 0 || userName === "") {
                isValid = false;
                errorMessage = "Tên đăng nhập không được để trống";
                userNameInput.focus();
            } else if (userName.length <= 6 || !/^[a-zA-Z0-9]+$/.test(userName)) {
                isValid = false;
                errorMessage = "Tên đăng nhập phải có ít nhất 6 ký tự và không chứa ký tự đặc biệt.";
                userNameInput.focus();
            }

            const userPassword = userPasswordInput.value;
            if (isValid && (userPassword.length == 0 || userPassword === "")) {
                isValid = false;
                errorMessage = "Mật khẩu không được để trống";
                userPasswordInput.focus();u
            } else if (isValid && (userPassword.length <= 6 || !/^[a-zA-Z0-9]+$/.test(userPassword))) {
                isValid = false;
                errorMessage = "Mật khẩu phải có ít nhất 6 ký tự và không chứa ký tự đặc biệt.";
                userPasswordInput.focus();
            }

            const userFullName = userFullNameInput.value;
            if (isValid && userFullName.trim() === "") {
                isValid = false;
                errorMessage = "Họ và tên không được để trống";
                userFullNameInput.focus();
            } else if (isValid && userFullName.length > 30) {
                isValid = false;
                errorMessage = "Họ và tên không được quá 30 ký tự";
                userFullNameInput.focus();
            }

            if (!isValid) {
                alert(errorMessage);
                return;
            }
            this.submit();
        });
    </script>
</body>
</html>
