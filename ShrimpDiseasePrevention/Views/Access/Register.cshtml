@model ShrimpDiseasePrevention.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Access.css" asp-append-version="true" />
</head>
<body>
    <div class="floating-form-container">
        <h3>Đăng ký</h3>
        <form id="registrationForm" asp-action="Register" method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="Tên đăng nhập" required />
                <label asp-for="UserName">Tên đăng nhập</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserPassword" class="form-control" type="password" id="UserPassword" placeholder="Mật khẩu" required />
                <label asp-for="UserPassword">Mật khẩu</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="UserFullName" class="form-control" id="UserFullName" placeholder="Họ và tên" required />
                <label asp-for="UserFullName">Họ và tên</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            Đã có tài khoản? <a asp-action="Login">Đăng nhập</a>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.NotificationForRegister == "Already")
    {
        <script>
            const userNameInput = document.getElementById("UserName");
            alert('Tên tài khoản đã tồn tại, vui lòng chọn tên khác!');
            userNameInput.focus();
        </script>
    }

    @if (ViewBag.NotificationForRegister == "Username too short")
    {
        <script>
            const userNameInput = document.getElementById("UserName");
            alert('Tài khoản không được được dưới 6 ký tự!');
            userNameInput.focus();
        </script>
    }

    @if (ViewBag.NotificationForRegister == "Userpassword too short")
    {
        <script>
            const userPasswordInput = document.getElementById("UserPassword");
            alert('Mật khẩu không được được dưới 6 ký tự!');
            userPasswordInput.focus();
        </script>
    }

    @if (ViewBag.NotificationForRegister == "Success")
    {
        <script>
            alert('Đăng ký thành công!');
        </script>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
                   document.addEventListener("DOMContentLoaded", function () {
            const userNameInput = document.getElementById("UserName");
            const userPasswordInput = document.getElementById("UserPassword");
            const userFullNameInput = document.getElementById("UserFullName");

            userNameInput.oninvalid = function () {
                if (this.validity.valueMissing) {
                    this.setCustomValidity("Vui lòng nhập tên đăng nhập.");
                }
            };
            userNameInput.oninput = function () {
                this.setCustomValidity("");
            };

            userPasswordInput.oninvalid = function () {
                if (this.validity.valueMissing) {
                    this.setCustomValidity("Vui lòng nhập mật khẩu.");
                }
            };
            userPasswordInput.oninput = function () {
                this.setCustomValidity("");
            };

            userFullNameInput.oninvalid = function () {
                if (this.validity.valueMissing) {
                    this.setCustomValidity("Vui lòng nhập họ và tên.");
                }
            };
            userFullNameInput.oninput = function () {
                this.setCustomValidity("");
            };
        });

    </script>
</body>
</html>
