@model ShrimpDiseasePrevention.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Access.css" asp-append-version="true" />
</head>
<body>
    <div class="floating-form-container">
        <h3>Chào mừng trở lại</h3>

        <form id="loginForm" asp-action="Login" method="post" class="needs-validation">
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="Tên đăng nhập" required />
                <label asp-for="UserName">Tên đăng nhập</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="UserPassword" class="form-control" type="password" id="UserPassword" placeholder="Mật khẩu" required />
                <label asp-for="UserPassword">Mật khẩu</label>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            Chưa có tài khoản? <a asp-action="Register">Đăng ký</a>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.NotificationForLogin == "Invalid")
    {
        <script>
            const userNameInput = document.getElementById("UserName");
            alert('Sai tên đăng nhập hoặc mật khẩu');
            userNameInput.focus();
        </script>
    }
    <script>
               document.addEventListener("DOMContentLoaded", function () {
            const userNameInput = document.getElementById("UserName");
            const userPasswordInput = document.getElementById("UserPassword");

            userNameInput.oninvalid = function () {
                this.setCustomValidity("Vui lòng nhập tên đăng nhập");
            };
            userNameInput.oninput = function () {
                this.setCustomValidity("");
            };

            userPasswordInput.oninvalid = function () {
                this.setCustomValidity("Vui lòng nhập mật khẩu");
            };
            userPasswordInput.oninput = function () {
                this.setCustomValidity("");
            };
        });

    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
