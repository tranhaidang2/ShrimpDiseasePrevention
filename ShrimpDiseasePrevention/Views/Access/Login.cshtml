@model ShrimpDiseasePrevention.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Access.css" asp-append-version="true" />
</head>
<body>
    <div class="floating-form-container">
        <h3>Đăng nhập</h3>

        <form id="loginForm" asp-action="Login" class="needs-validation" novalidate method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="Tên đăng nhập" required />
                <label asp-for="UserName">Tên đăng nhập</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="UserPassword" class="form-control" type="password" id="UserPassword" placeholder="Mật khẩu" required />
                <label asp-for="UserPassword">Mật khẩu</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            Chưa có tài khoản? <a asp-action="Register">Đăng ký</a>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @if (ViewBag.NotificationForLogin == "Fail")
    {
        <script>
            alert('Tên đăng nhập hoặc mật khẩu không đúng');
        </script>
    }
    <script>
                document.getElementById("loginForm").addEventListener("submit", function (event) {
            event.preventDefault();

            let isValid = true;
            let errorMessage = "";

            const userNameInput = document.getElementById("UserName");
            const userPasswordInput = document.getElementById("UserPassword");

            const userName = userNameInput.value;
            if (userName.length == 0 || userName == "") {
                isValid = false;
                errorMessage = "Nhập tên đăng nhập";
                userNameInput.focus();
            }

            const userPassword = userPasswordInput.value;
            if (isValid && (userPassword.length == 0 || userPassword == "")) {
                isValid = false;
                errorMessage = "Nhập mật khẩu";
                userPasswordInput.focus();
            }

            if (!isValid) {
                alert(errorMessage);
            } else {
                this.submit();
            }
        });

        window.onload = function() {
            document.getElementById("loginForm").reset();
        };

    </script>
</body>
</html>
